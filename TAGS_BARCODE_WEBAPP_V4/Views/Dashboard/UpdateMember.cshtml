<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/UpdateMemberController.js"></script>
<div ng-app="App" ng-controller="UpdateMemberCrtl" class="container ng-cloak" style="margin-top: 5%;">
    <div class="row">
        <form class="form-inline" name="myForm">
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Search by Member Email" ng-model="searchMemb.Email">
            </div>
            <button class="btn btn-default" ng-disabled="searchMemb.Email.length == 0 || myForm.$invalid" ng-click="searchMember()">Search</button>
            <button type="button" class="btn btn-default" ng-click="reset()">Reset</button>
        </form>
        <div ng-if="ShowNewMemberForm" class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
           Member Not found!! Add member Below
        </div>
        <div ng-if="ShowUpdateMemberForm" class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            Member found!! Update details below
        </div>
    </div>
    <div class="row ng-cloak" ng-if="ShowUpdateMemberForm">
        <div class="panel panel-primary">
            <div class="panel-heading"> Update Member </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            First Name<br>
                            <input class="form-control" type="text" ng-model="member.FIRST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Last Name<br>
                            <input class="form-control" type="text" ng-model="member.LAST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Email<br>
                            <input class="form-control" type="text" ng-model="member.EMAIL_ID" disabled><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Company<br>
                            <input class="form-control" type="text" ng-model="member.COMPANY_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Cell Phone<br>
                            <input class="form-control" type="text" ng-model="member.CELL_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Home Phone<br>
                            <input class="form-control" type="text" ng-model="member.HOME_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Would you like to volunteer for TAGS future Events?<br>
                            <input class="form-control" type="checkbox" ng-model="member.IS_VOLUNTEER"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-disabled="member.EMAIL_ID.length == 0" ng-click="updateMember()">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row ng-cloak" ng-if="ShowNewMemberForm">
        <div class="panel panel-primary">
            <div class="panel-heading"> Add New Member </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            First Name<br>
                            <input class="form-control" type="text" ng-model="member.FIRST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Last Name<br>
                            <input class="form-control" type="text" ng-model="member.LAST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Email<br>
                            <input class="form-control" type="text" ng-model="member.EMAIL_ID" disabled><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Company<br>
                            <input class="form-control" type="text" ng-model="member.COMPANY_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Cell Phone<br>
                            <input class="form-control" type="text" ng-model="member.CELL_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Home Phone<br>
                            <input class="form-control" type="text" ng-model="member.HOME_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Would you like to volunteer for TAGS future Events?<br>
                            <input class="form-control" type="checkbox" ng-model="member.IS_VOLUNTEER"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-disabled="member.EMAIL_ID.length == 0" ng-click="AddMember()">Create</button>
                        </div>
                    </div>
                    <div ng-if="ShowUpdateMemberForm" dismiss-on-timeout="2000" class="alert alert-warning alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        Successfully Created!
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="alert alert-warning alert-dismissable" ng-if="alert.length>0">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
       {{alert}}
    </div>
</div>

