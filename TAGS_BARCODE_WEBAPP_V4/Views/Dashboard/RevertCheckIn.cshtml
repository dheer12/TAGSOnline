<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/RevertCheckInController.js"></script>

<div ng-app="App" ng-controller="revertCrtl" class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">Revert Check In</div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            Ticket Number:<br>
                            <input class="form-control" type="number" ng-model="CheckInVM.TicketNo"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-disabled="CheckInVM.TicketNo.length == 0" data-toggle="modal" data-target="#myModal">Check In</button>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog modal-sm">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" style="text-align:center">Is this the ticket number?</h4>
                            </div>
                            <div class="modal-body">
                                <h3 style="text-align:center">{{CheckInVM.TicketNo}}</h3>
                                <div ng-if="CheckInVM.TicketNotFound" class="alert alert-danger alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    Ticket number doesn't exist
                                </div>
                                <div ng-if="CheckInVM.AlreadyCheckedIn" class="alert alert-warning alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    Successfully reverted
                                </div>
                                <div ng-if="CheckInVM.IsCheckedIn" class="alert alert-success alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    Not checked in already!
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" ng-if="!CheckInVM.TicketNotFound && !CheckInVM.IsCheckedIn && !CheckInVM.AlreadyCheckedIn" class="btn btn-info" ng-click="checkIn()">Revert Check In</button>
                                <button type="button" class="btn btn-default" ng-click="reset()" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
