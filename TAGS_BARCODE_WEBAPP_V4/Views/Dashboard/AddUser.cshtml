<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/AddUserController.js"></script>
<div ng-app="App" ng-controller="AddUserCrtl" class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">Add New User </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            First Name<br>
                            <input class="form-control" type="text" ng-model="user.FIRST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Last Name<br>
                            <input class="form-control" type="text" ng-model="user.LAST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Password<br>
                            <input class="form-control" type="text" ng-model="user.PASSWORD"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            USER_ROLE<br>
                            <select class="form-control" ng-model="user.USER_ROLE">
                                <option selected="selected">User</option>
                                <option>Admin</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-disabled="user.PASSWORD.length == 0 || user.LAST_NAME.length == 0" ng-click="addUser()">Create User</button>
                        </div>
                    </div>
                    <div ng-if="userCreated" class="alert alert-success alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        Successfully created user {{user.LAST_NAME}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

