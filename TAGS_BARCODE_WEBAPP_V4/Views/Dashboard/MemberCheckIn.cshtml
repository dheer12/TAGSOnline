<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/EventCheckInController.js"></script>
<div ng-app="App" ng-controller="EventCheckInCrtl" class="container ng-cloak" style="margin-top: 5%;">
    <div class="row">
        <form class="form-inline" name="myForm">
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Search by Member Email" ng-model="searchMemb.Email">
            </div>
            <button class="btn btn-default" ng-disabled="searchMemb.Email.length == 0 || myForm.$invalid" ng-click="searchMember()">Search</button>
            <button type="button" class="btn btn-default" ng-click="reset()">Reset</button>
        </form>
    </div>
    <br/>
    <div class="row" ng-if="IsExistingMember && IsRegistered">
        <div class="alert alert-warning alert-dismissable">
            Member registered for event. Would you like update check in details Now?
        </div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <form class="form">                  
                    <div class="form-group">
                        <div class="col-md-10">
                            Check In<br>
                            <input class="form-control" type="checkbox" ng-model="VM.eventCheckInVM.IS_CHECKEDIN"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Has Paid<br>
                            <input class="form-control" type="checkbox" ng-model="VM.eventCheckInVM.IS_PAID"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-click="CheckInUser()">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row" ng-if="IsExistingMember && !IsRegistered">
        <div class="alert alert-warning alert-dismissable">
            Member not registered to this event. Would you like register member to this event now?
        </div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <form class="form">
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-click="CheckInUser()">Yes, Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row" ng-if="!IsExistingMember && !IsRegistered &&hasSubmitted">
        <div class="alert alert-warning alert-dismissable">
            Member not found. Please add member first.
        </div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            First Name<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.FIRST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Last Name<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.LAST_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Email<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.EMAIL_ID" disabled><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Company<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.COMPANY_NAME"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Cell Phone<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.CELL_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Home Phone<br>
                            <input class="form-control" type="text" ng-model="VM.newMember.HOME_PHONE"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            Would you like to volunteer for TAGS future Events?<br>
                            <input class="form-control" type="checkbox" ng-model="VM.newMember.IS_VOLUNTEER"><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button class="btn btn-default" ng-disabled="VM.newMember.EMAIL_ID.length == 0" ng-click="CheckInUser()">Yes, Add member</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
