<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/ReportsController.js"></script>
<div ng-app="App" ng-controller="ReportsCrtl" class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">Reports</div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="sel1">Select Event:</label>
                    <select class="form-control" ng-model="event" ng-options="x.EVENT_NAME for x in events" ng-change="selectEvent()">
                    </select>
                </div>
                Event Name:  {{reports.EVENT_NAME}}
                Location: {{reports.EVENT_LOCATION}}
                Event Date: {{reports.EVENT_DATE}}
                <div ng-if="reports.IS_TICKETED_EVENT">
                    <div ng-repeat="x in reports.TicketReports">
                        Ticket Type: {{x.TicketType}}
                        No Checked In: {{x.checkIns}}
                    </div>
                </div>
                <div ng-if="!reports.IS_TICKETED_EVENT">
                   CheckIns {{reports.EventReports.checkIns}}
                   Registrations {{reports.EventReports.registrations}}
                </div>
            </div>
        </div>
    </div>
</div>