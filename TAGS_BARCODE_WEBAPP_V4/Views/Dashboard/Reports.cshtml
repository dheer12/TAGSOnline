<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js"></script>
<script src="~/Javascript/ReportsController.js"></script>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<div ng-app="App" ng-controller="ReportsCrtl" class="container" style="margin-top: 5%;" ng-cloak>
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">Reports</div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="sel1">Select Event:</label>
                    <select class="form-control" ng-model="event" ng-options="x.EVENT_NAME for x in events" ng-change="selectEvent()">
                    </select>
                </div>
                Location: <span class="label label-default">{{reports.EVENT_LOCATION}}</span> 
                <br/><br /><br />
                <div ng-if="reports.IS_TICKETED_EVENT">
                    <div ng-repeat="x in reports.TicketReports">
                        <div class="col-xs-6 col-md-3">
                            <div class="panel status panel-default">
                                <div class="panel-heading">
                                    <h1 class="panel-title text-center"><i class="fa fa-child"></i>&nbsp;{{x.TicketType}} checkins</h1>
                                </div>
                                <div class="panel-body text-center">
                                    <strong>{{x.checkIns}}</strong>
                                </div>
                            </div>
                        </div> 
                    </div> 
                </div>
                <div ng-if="!reports.IS_TICKETED_EVENT">
                    <div class="col-xs-6 col-md-3">
                        <div class="panel status panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title text-center"><i class="fa fa-child"></i>&nbsp;CheckIns</h1>
                            </div>
                            <div class="panel-body text-center">
                                <strong>{{reports.EventReports.checkIns}}</strong>
                            </div>
                        </div>
                    </div> 
                    <div class="col-xs-6 col-md-3">
                        <div class="panel status panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title text-center"><i class="fa fa-child"></i>&nbsp;Paid for</h1>
                            </div>
                            <div class="panel-body text-center">
                                <strong>{{reports.EventReports.isPaids}}</strong>
                            </div>
                        </div>
                    </div> 
                    <div class="col-xs-6 col-md-3">
                        <div class="panel status panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title text-center"><i class="fa fa-child"></i>&nbsp;Registrations</h1>
                            </div>
                            <div class="panel-body text-center">
                                <strong>{{reports.EventReports.registrations}}</strong>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>